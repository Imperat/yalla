{
  "name": "yallajs",
  "version": "0.0.0-development",
  "description": "Web Application with zero boiler plate",
  "scripts": {
    "commit": "git-cz",
    "build": "babel src -d lib",
    "test:classic": "babel src -d lib && mocha test/**/*.js",
    "report-coverage" : "cat ./coverage/report-lcov/lcov.info | codecov",
    "test": "babel src -d lib && karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": "https://github.com/yallajs/yalla.git",
  "keywords": [
    "html",
    "component",
    "with",
    "zero",
    "boilerplate"
  ],
  "author": "'Arif <'a.arif.r@gmail.com'>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yallajs/yalla/issues"
  },
  "homepage": "http://yallajs.io",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chai": "^4.1.2",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "ghooks": "^2.0.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "mocha": "^4.0.1",
    "semantic-release": "^8.0.3"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn test"
    }
  },
  "main": "index.js"
}
